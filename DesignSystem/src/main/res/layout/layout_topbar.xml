<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <import type="com.yourssu.design.system.foundation.Icon"/>
        <import type="com.yourssu.design.system.atom.IconView" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:background="@drawable/white000">

        <com.yourssu.design.system.atom.TopBarButton
            android:id="@+id/start_icon_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:icon="@{Icon.ic_arrow_left_line}"
            app:size="@{IconView.ExtraSmall}" />

        <com.yourssu.design.system.atom.TopBarButton
            android:id="@+id/start_text_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.yourssu.design.system.atom.Text
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typo="subtitle2"
            tools:text="제목" />

        <com.yourssu.design.system.atom.TopBarButton
            android:id="@+id/end_text_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.yourssu.design.system.atom.TopBarButton
            android:id="@+id/end_first_icon_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.yourssu.design.system.atom.TopBarButton
            android:id="@+id/end_second_icon_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/end_first_icon_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
