<?xml version="1.0" encoding="utf-8"?>
<!-- 실제로 개발자들이 쓰게 되는 semantic color
     color 사용시 basic color 에 직접 접근하는것을 막기 위해서 basic color 는 drawable 로 선언되어 있다
     때문에 reference type 으로 강제해야 한다 -->
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ReferenceType">

    <!-- Background -->
    <color name="bgNormal">@drawable/white000</color>
    <color name="bgElevated">@drawable/white000</color>
    <color name="bgSelected">@drawable/gray100</color>
    <color name="bgPressed">@drawable/gray100</color>

    <!-- Text -->
    <color name="textPrimary">@drawable/gray900</color>
    <color name="textSecondary">@drawable/gray800</color>
    <color name="textTertiary">@drawable/gray600</color>
    <color name="textDisabled">@drawable/gray500</color>
    <color name="textReversed">@drawable/white000</color>
    <color name="textPointed">@drawable/pointBlue400</color>
    <color name="textWarned">@drawable/warningRed400</color>

    <!-- Dim -->
    <color name="dimNormal">@drawable/gray900A30</color>
    <color name="dimThick">@drawable/gray900A70</color>

    <!-- Border -->
    <color name="borderThin">@drawable/gray100</color>
    <color name="borderNormal">@drawable/gray400</color>
    <color name="borderThick">@drawable/gray500</color>

    <!-- Button -->
    <color name="buttonNormal">@drawable/gray700</color>
    <color name="buttonReversed">@drawable/white000</color>
    <color name="buttonDisabled">@drawable/gray500</color>
    <color name="buttonDisabledBG">@drawable/gray200</color>
    <color name="buttonPoint">@drawable/pointBlue400</color>
    <color name="buttonPointBG">@drawable/pointBlue050</color>
    <color name="buttonWarned">@drawable/warningRed400</color>
    <color name="buttonWarnedBG">@drawable/warningRed050</color>

    <!-- TabBar -->
    <color name="tabBarNormal">@drawable/gray600</color>
    <color name="tabBarSelected">@drawable/pointBlue400</color>

    <!-- inputField -->
    <color name="inputFieldNormal">@drawable/white000</color>
    <color name="inputFieldElevated">@drawable/gray100</color>

    <!-- Pressed -->
    <color name="pressed">@drawable/gray900A10</color>

    <!-- Shadow -->
    <color name="shadowThin">@drawable/gray400</color>
    <color name="shadowNormal">@drawable/gray500</color>

    <!-- MonoTag -->
    <color name="monoTagPrimary">@drawable/gray300</color>
    <color name="monoTagBG">@drawable/gray100</color>
    <color name="monoTagText">@drawable/gray900</color>

    <!-- GreenTag -->
    <color name="greenTagPrimary">@drawable/green300</color>
    <color name="greenTagBG">@drawable/green050</color>
    <color name="greenTagText">@drawable/green800</color>

    <!-- EmeraldTag -->
    <color name="emeraldTagPrimary">@drawable/emerald300</color>
    <color name="emeraldTagBG">@drawable/emerald050</color>
    <color name="emeraldTagText">@drawable/emerald800</color>

    <!-- AquaTag -->
    <color name="aquaTagPrimary">@drawable/aqua300</color>
    <color name="aquaTagBG">@drawable/aqua050</color>
    <color name="aquaTagText">@drawable/aqua800</color>

    <!-- BlueTag -->
    <color name="blueTagPrimary">@drawable/blue300</color>
    <color name="blueTagBG">@drawable/blue050</color>
    <color name="blueTagText">@drawable/blue800</color>

    <!-- IndigoTag -->
    <color name="indigoTagPrimary">@drawable/indigo300</color>
    <color name="indigoTagBG">@drawable/indigo050</color>
    <color name="indigoTagText">@drawable/indigo500</color>
    
    <!-- VioletTag -->
    <color name="violetTagPrimary">@drawable/violet300</color>
    <color name="violetTagBG">@drawable/violet050</color>
    <color name="violetTagText">@drawable/violet500</color>

    <!-- PurpleTag -->
    <color name="purpleTagPrimary">@drawable/purple300</color>
    <color name="purpleTagBG">@drawable/purple050</color>
    <color name="purpleTagText">@drawable/purple500</color>

    <!-- PinkTag -->
    <color name="pinkTagPrimary">@drawable/pink300</color>
    <color name="pinkTagBG">@drawable/pink050</color>
    <color name="pinkTagText">@drawable/pink800</color>

</resources>